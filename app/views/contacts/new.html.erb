<h1 id="artical_title">Send Message</h1>
<div class="skinny_wrapper wrapper_padding">
  <%= form_for @contact do |f| %>
      <%= f.label :name %> <br>
      <%= f.text_field :name, require: true %>

      <br>
      <%= f.label :email %> <br>
      <%= f.text_field :email, require: true %>

      <br>
      <%= f.label :message %> <br>
      <%= f.text_area :message, require: true %>

      <br>

<div class="hidden">
  <%= f.label :nickname %> <br>
  <%= f.text_field :nickname, hint: 'leave this field blank' %>
</div>

      <%=  f.submit 'Send Message', class: "button" %>
<% end %>

</div>