<%= form_for @project, html: { multipart: true } do |f| %>
    <% if @project .errors.any? %>
        <h2><%= pluralize(@project.errors.count, "erorr") %> prevented this post form saving:</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
    <br>
    <br>

    <%= f.label :description, "Write your description here" %> <br>
    <%= f.text_area :description%>
    <br>
    <br>
    <%= f.label :link %> <br>
    <%= f.text_field :link %>
    <br>
    <br>
    <%= f.label :picture %> <br>
    <%= f.file_field :picture %>
    <br>
    <br>
    <%= f.submit %>
<% end %>