<div id="post_show_content" class="skinny_wrapper wrapper_padding">
<header>
  <p class="date"><%= @post.created_at.strftime("%A, %b %d") %></p>
  <h1><%=@post.title %></h1>
  <%= image_tag @post.image.url(:large)%>
  <hr>  
</header>
<div id="content">
  <%= markdown @post.content %>
</div>
<% if user_signed_in? %>
  <div id="admin_links">
    <%= link_to "Edit Article", edit_post_path(@post) %>
    <%= link_to "Delete Article", post_path(@post), method: :delete, data: {confirm: "Are u sure?"} %>
  </div>
      <% end %>
  <hr>
<div id="share_box">
  <p>Share The DO List</p>
  <a href=""><i class="fa fa-twitter"></i></a>
  <i class="fa fa-vk"></i></a>
  <i class="fa fa-google-plus"></i></a>
</div>
  <hr>
